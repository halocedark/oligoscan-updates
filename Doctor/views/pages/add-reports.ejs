<div class="container-fluid" id="addReportsContainer">
	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.add_reports.sectionTitle %></h1>
	</div>
	<div class="mt-3 app-block" id="wrapper01">
		<div class="alert alert-info my-2" style="display:none;" id="ERROR_BOX">
			<img src="assets/img/utils/info.png" class="alert-icon" alt="">
			<div class="alert-text" id="text"></div>
		</div>
		<form action="#" id="addForm">
			<div class="mb-2 section">
				<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_reports.form01.label01 %></label>
				<input type="text" class="input-text input-text-outline border-bottom-forced my-2" id="searchPatientsInput" placeholder="<%= UI_DISPLAY_LANG.views.pages.add_reports.form01.ph01 %>">
				<select name="" class="select-01" id="patientSelect"></select>
			</div>
			<div class="mb-2">
				<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_reports.form01.label02 %></label>
				<input type="text" class="input-text input-text-outline" id="reportNameInput">
			</div>
			<div class="mb-4">
				<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_reports.form01.label03 %></label>
				<div type="text" class="input-textarea resizable-v input-text-outline" id="reportHTMLInput" contenteditable></div>
			</div>
			<div class="mb-4">
				<div class="form-field-01">
					<div class="form-field-input-holder">
						<div class="form-field-label"><%= UI_DISPLAY_LANG.views.pages.add_reports.form01.label04 %></div>
						<input type="date" id="reportDateInput" class="form-field-input">
					</div>
				</div>
			</div>
			<div class="mb-2">
				<div class="form-field-01">
					<div class="form-field-input-holder">
						<div class="form-field-label"><%= UI_DISPLAY_LANG.views.pages.add_reports.form01.label05 %></div>
						<input type="time" step="any" id="reportTimeInput" class="form-field-input">
					</div>
				</div>
			</div>
			<div class="">
				<input type="submit" class="btn btn-primary btn-sm shadow" value="<%= UI_DISPLAY_LANG.views.pages.add_reports.form01.submitBTN01 %>">
			</div>
		</form>
	</div>
</div>


<div id="color-calendar"></div>