    {
        displayAllProductsInvoices({
            method_type: 'direction_central_administration_to_distributor_selling_local_search',
            user_id: EmployeeObject.employee_id,
            query: products_invoices_search_input.val()
        })
    });
    // display all
    displayAllProductsInvoices({
        method_type: 'direction_central_administration_to_distributor_selling_local_search',
        user_id: EmployeeObject.employee_id,
        query: products_invoices_search_input.val()
    })
