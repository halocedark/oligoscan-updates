function selectedRows()
{
    var list = [];
    var items = tableElement1.find('[data-role="CHECK"]');
    for (var i = 0; i < items.length; i++) 
    {
        var check = $(items[i]);
        EmployeeObject = {
            employee_id: check.data('employeeid')
        };
        if ( check.is(':checked') )
            list.push(EmployeeObject);
    }

    return list;
}

