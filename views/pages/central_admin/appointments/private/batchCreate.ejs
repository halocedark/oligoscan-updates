<div class="container-fluid" id="batchCreateAppointementsContainer">
	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.add_appointement.sectionTitle %></h1>
	</div>
    <div class="alert alert-info my-2" style="display:none;" id="ERROR_BOX">
        <img src="assets/img/utils/info.png" class="alert-icon" alt="">
        <div class="alert-text" id="text"></div>
    </div>

	<div class="mt-3 app-block">
		
        <div class="row gx-2 gy-5">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="section">
                    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label13 %></label>
                    <select name="" class="select-01" id="clinic_select">
                        
                    </select>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="section">
                    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label26 %></label>
                    <select name="" class="select-01" id="department_select">
                        
                    </select>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="section">
                    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label28 %></label>
                    <input type="number" readonly class="input-text input-text-outline" id="aptPrice_input">
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="">
                    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label1 %></label>
                    <input type="text" class="input-text input-text-outline" id="aptName_input">
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="">
                    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label27 %></label>
                    <input type="text" class="input-text input-text-outline" id="aptNote_input">
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="">
                    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.select_date %></label>
                    <input type="date" class="input-text input-text-outline" id="aptDate_input">
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.select_time %></label>
                <input type="time" step="any" class="input-text input-text-outline" id="aptTime_input">
            </div>
        </div>

	</div>

    <div class="mt-3 app-block">

        <div class="table-nav">

            <input type="text" class="input-text input-text-outline" id="search_input" placeholder="<%= UI_DISPLAY_LANG.views.pages.global.placeholder5 %>">

        </div>

        <div id="pagination" class="my-3 flex flex-center"></div>
		<div class="utable shadowed" id="table_element">
			<div class="thead">
				<div class="td">#</div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th1 %></div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th2 %></div>
			</div>
			<div class="tbody">
				<!--
				<div class="tr">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="CHECK">
					</div>
					<div class="td">clinicname</div>
					<div class="td">classname</div>
				</div>
				-->
			</div>
		</div>

    </div>

    <div class="mt-3 app-block">

        <button class="btn btn-primary btn-sm" id="create_appointments_button">
            <%= UI_DISPLAY_LANG.views.pages.global.save_changes_button %>
        </button>

    </div>

</div>

<script>

$(async function()
{

var page_container = $('#batchCreateAppointementsContainer')
if ( !page_container[0] ) return

var ERROR_BOX = page_container.find('#ERROR_BOX')

var clinic_select = page_container.find('#clinic_select')
var department_select = page_container.find('#department_select')

var aptPrice_input = page_container.find('#aptPrice_input')
var aptName_input = page_container.find('#aptName_input')
var aptNote_input = page_container.find('#aptNote_input')
var aptDate_input = page_container.find('#aptDate_input')
var aptTime_input = page_container.find('#aptTime_input')

var search_input = page_container.find('#search_input')
var pagination = page_container.find('#pagination')
var table_element = page_container.find('#table_element')
var create_appointments_button = page_container.find('#create_appointments_button')

aptDate_input.val(CURRENT_DATE)
aptTime_input.val(CURRENT_TIME)
// list clinics
var res = await CLINIC_MODEL.search('')
if ( res.code == 200 )
{
    var data = res.data
    var html = ''

    $.each(data, (k,v) =>
    {
        html += `<option value="${v.clinicId}">${v.clinicName}</option>`
    })
    // add html
    clinic_select.html(html)
}
// select clinic
clinic_select.on('change', async e =>
{
    var val = clinic_select.find(':selected').val()

    // list departments
    var res = await TREATMENT_CLASS_MODEL.local_index({
        clinicId: val
    })
    department_select.html('')
    if ( res.code == 404 ) return

    var data = res.data
    var html = ''

    $.each(data, (k,v) =>
    {
        html += `<option value="${v.classId}" data-price="${v.classPrice}">${v.className}</option>`
    })
    // add html
    department_select.html(html)
    department_select.trigger('change')
    search_input.trigger('keyup')
})
clinic_select.trigger('change')
// select department
department_select.on('change', e =>
{
    var price = parseFloat(department_select.find(':selected').data('price'))
    aptPrice_input.val(price.toFixed(2))
    if ( FUI_DISPLAY_LANG.lang == 'ar' )
        aptName_input.val('موعد '+department_select.find(':selected').text())
    else if ( FUI_DISPLAY_LANG.lang == 'fr' )
        aptName_input.val('Rendez-vous de '+department_select.find(':selected').text())

    // filter patients
    displayPatients({
        clinicId: clinic_select.find(':selected').val(),
        filter: department_select.find(':selected').val(),
        request_type: 'local_filter'
    })
})
// search patients
search_input.trigger('keyup')
search_input.on('keyup', async e =>
{
   
    displayPatients({
        clinicId: clinic_select.find(':selected').val(),
        query: search_input.val(),
        request_type: 'searchLocal'
    })
    
})
// create appointments
create_appointments_button.on('click', async e =>
{
    create_appointments_button.addClass('disabled')
    var res = await APPOINTMENT_MODEL.batchStore({
        list: selectedPatients()
    })
    create_appointments_button.removeClass('disabled')
    ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(res.message)
    CreateToast("PS", res.message, '')
})
// display patients
async function displayPatients(params)
{
    SectionLoader(table_element)
    if ( params.request_type == 'searchLocal' )
        var res = await PATIENT_MODEL.searchLocal(params)
    else if ( params.request_type == 'local_filter' )
        var res = await PATIENT_MODEL.local_filter(params)

    SectionLoader(table_element, '')
    table_element.find('.tbody').html('')
    if ( res.code == 404 ) return

    var data = res.data
    var html = ''

    $.each(data, (k,v) =>
    {
        html += `<div class="tr" data-id="${v.patientId}">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="check">
					</div>
					<div class="td">${v.patientName}</div>
					<div class="td">${v.patientPhone}</div>
				</div>PAG_SEP`
    })

    new SmoothPagination(pagination, table_element.find('.tbody'), {
        data: html.split('PAG_SEP')
    })
}
// selected rows
function selectedPatients()
{
    var list = []
    var items = table_element.find('.tr')
    for (var i = 0; i < items.length; i++) 
    {
        var parent = $(items[i])
        var check = parent.find('[data-role="check"]')
        if ( check.is(':checked') )
        {
            list.push({ 
                patientId: parent.data('id'),
                clinicId: clinic_select.find(':selected').val(),
                clinicName: clinic_select.find(':selected').text(),
                classId: department_select.find(':selected').val(),
                className: department_select.find(':selected').text(),
                aptName: aptName_input.val(),
                aptNote: aptNote_input.val(),
                aptPrice: aptPrice_input.val(),
                aptDate: aptDate_input.val(),
                aptTime: aptTime_input.val(),
            })
        }
    }

    return list
}

})

</script>